<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_item_home">

    <!-- Drawer Navigation -->

    <fragment
        android:id="@+id/nav_item_home"
        android:name="com.bluapp.kotlinview.Navigation.NavFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_nav" />

    <fragment
        android:id="@+id/nav_item_blog"
        android:name="com.bluapp.kotlinview.Navigation.NavFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_nav" />

    <fragment
        android:id="@+id/nav_item_app"
        android:name="com.bluapp.kotlinview.Navigation.NavFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_nav" />

    <!-- Bottom Navigation -->

    <fragment
        android:id="@+id/nav_homeFragment"
        android:name="com.bluapp.kotlinview.Navigation.NavFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_nav" />

    <fragment
        android:id="@+id/nav_directionFragment"
        android:name="com.bluapp.kotlinview.Navigation.NavFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_nav" />

    <fragment
        android:id="@+id/nav_commentFragment"
        android:name="com.bluapp.kotlinview.Navigation.NavFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_nav" />

</navigation>